{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "nix": {
    "enabled": true,
    "fileMatch": [
      "(^|/)flake\\.lock$",
      "(^|/)pkgs/.+\\.nix$"
    ]
  },
  "packageRules": [
    {
      "description": "Autoupdate Nix derivations under pkgs/",
      "matchManagers": [
        "nix"
      ],
      "matchPaths": [
        "pkgs/**"
      ],
      "separateMinorPatch": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^services/n8n\\.nix$"
      ],
      "matchStrings": [
        "n8nVersion\\s*=\\s*\"(?<currentValue>[^\"]+)\";"
      ],
      "depNameTemplate": "n8nio/n8n",
      "datasourceTemplate": "docker"
    }
  ],
  "includePaths": [
    "**/*.nix"
  ]
}
